<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:id="@+id/fragment_child_ep_bc_sub_brs_card_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="64dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="64dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="20dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fragment_child_ep_bc_sub_brs_card_linlay_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/fragment_child_ep_bc_sub_brs_card_linlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:text="@string/name"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/fragment_child_ep_bc_sub_brs_card_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/et_bg"
                    android:focusable="false"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="none"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_child_ep_bc_sub_brs_card_linlay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:text="@string/duration"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/fragment_child_ep_bc_sub_brs_card_et_duration"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/et_bg"
                    android:focusable="false"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="none"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_child_ep_bc_sub_brs_card_linlay3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_child_ep_bc_sub_brs_card_linlay_main"
            tools:layout_editor_absoluteY="140dp">

            <ImageButton
                android:id="@+id/fragment_child_ep_bc_sub_brs_card_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bottom_left_corner_yes"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/dirtyWhite"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/fragment_child_ep_bc_sub_brs_card_btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bottom_right_corner_no"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/dirtyWhite"
                android:textSize="16sp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>
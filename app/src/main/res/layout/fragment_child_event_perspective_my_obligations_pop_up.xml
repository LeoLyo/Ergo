<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/fragment_child_ep_mo_cv_pop_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/fragment_child_ep_mo_linlay_main_pop_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_child_ep_mo_iv_pop_up"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_jebale_te_3_tacke" />

            <TextView
                android:id="@+id/fragment_child_ep_mo_tv_subordinate_pop_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_light"
                android:text="@string/dummy_text"
                android:textColor="@color/dirtyWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dirtyWhite" />

            <LinearLayout
                android:id="@+id/fragment_child_ep_mo_linlay1_pop_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:text="@string/what"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/fragment_child_ep_mo_et_what_pop_up"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/dirtyWhite"
                    android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_child_ep_mo_linlay2_pop_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:text="@string/where"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/fragment_child_ep_mo_et_where_pop_up"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/dirtyWhite"
                    android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_child_ep_mo_linlay3_pop_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:text="@string/details"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/fragment_child_ep_mo_et_details_pop_up"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/dirtyWhite"
                    android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                    android:textSize="15sp" />

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/fragment_child_ep_mo_btn_yes_pop_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/btn_circle_yes"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/dirtyWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fragment_child_ep_mo_btn_no_pop_up"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/fragment_child_ep_mo_btn_no_pop_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/btn_circle_no"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/dirtyWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fragment_child_ep_mo_btn_maybe_pop_up"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/fragment_child_ep_mo_btn_yes_pop_up"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/fragment_child_ep_mo_btn_maybe_pop_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/btn_circle_maybe"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/dirtyWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/fragment_child_ep_mo_btn_no_pop_up"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fragment_child_ep_mo_tv_complete_pop_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/complete"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/fragment_child_ep_mo_btn_yes_pop_up"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_child_ep_mo_btn_yes_pop_up"
                    app:layout_constraintStart_toStartOf="@+id/fragment_child_ep_mo_btn_yes_pop_up"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/fragment_child_ep_mo_tv_decline_pop_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/decline"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_child_ep_mo_btn_no_pop_up"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_child_ep_mo_btn_no_pop_up"
                    app:layout_constraintStart_toStartOf="@+id/fragment_child_ep_mo_btn_no_pop_up"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/fragment_child_ep_mo_tv_start_pop_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/start"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/fragment_child_ep_mo_btn_maybe_pop_up"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_child_ep_mo_btn_maybe_pop_up"
                    app:layout_constraintStart_toStartOf="@+id/fragment_child_ep_mo_btn_maybe_pop_up"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />


            </android.support.constraint.ConstraintLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".authentication.YForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/forgot_password_launcher_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_logo" />

        <TextView
            android:id="@+id/forgot_password_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot_password_launcher_icon"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="@string/forgot_password_message"
            android:textAlignment="center"
            android:textColor="@color/dirtyWhite"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/forgot_password_linlay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password_message"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:text="@string/forgot_password_email_text"
                android:textColor="@color/dirtyWhite"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/forgot_password_et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_bg"
                android:fontFamily="@font/roboto_light"
                android:inputType="textEmailAddress"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:textColor="@color/dirtyWhite"
                android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                android:textSize="15sp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/forgot_password_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot_password_linlay1"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/forgot_password_btn_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/forgot_password_linlay1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/roboto_light"
            android:paddingEnd="70dp"
            android:paddingStart="70dp"
            android:text="@string/forgot_password_button_text"
            android:textColor="@color/dirtyWhite"
            android:textSize="16sp" />
        <Button
            android:id="@+id/forgot_password_btn_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/forgot_password_btn_reset_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/roboto_light"
            android:paddingEnd="70dp"
            android:paddingStart="70dp"
            android:text="@string/forgot_password_back_button_text"
            android:textColor="@color/dirtyWhite"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>
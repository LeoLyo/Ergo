<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/create_event_pop_up_dialog_root_relative_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/create_event_pop_up_dialog_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:id="@+id/create_event_pop_up_dialog_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/create_event_pop_up_dialog_image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"/>


            <TextView
                android:id="@+id/create_event_pop_up_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/roboto"
                android:text="@string/create_event_pop_up_dialog_message"
                android:textAlignment="center"
                android:textColor="@color/dirtyWhite"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/create_event_pop_up_dialog_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/create_event_pop_up_dialog_message"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/dirtyWhite"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/create_event_pop_up_dialog_pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_below="@+id/create_event_pop_up_dialog_event_name"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

            <Button
                android:id="@+id/create_event_pop_up_dialog_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create_event_pop_up_dialog_event_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/roboto_light"
                android:paddingEnd="70dp"
                android:paddingStart="70dp"
                android:text="@string/create_event"
                android:textColor="@color/dirtyWhite"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
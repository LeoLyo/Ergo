<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".authentication.YNotVerifiedActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/verification_launcher_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_logo" />

        <TextView
            android:id="@+id/email_verification_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verification_launcher_icon"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="@string/email_verification_message"
            android:textAlignment="center"
            android:textColor="@color/dirtyWhite"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/email_verification_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_verification_tv_message"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <Button
            android:id="@+id/email_verification_btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/email_verification_tv_message"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/roboto_light"
            android:paddingEnd="70dp"
            android:paddingStart="70dp"
            android:text="@string/email_verification_button_text"
            android:textColor="@color/dirtyWhite"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/background"
    tools:context=".authentication.YRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">


            <RelativeLayout
                android:id="@+id/log_in_rellay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/register_linlay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_email_title"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_email"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="textEmailAddress"
                            android:nextFocusForward="@+id/log_in_et_password"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_first_name_title"
                            android:textColor="@color/dirtyWhite"

                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="textPersonName|textCapWords|textAutoCorrect"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_nickname_title"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="textPersonName|textCapWords|textAutoCorrect"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_last_name_title"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="textPersonName|textCapWords|textAutoCorrect"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_address_title"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_address"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="textPostalAddress|textCapWords"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_phone_number_title"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="phone"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_password_title"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_pasword"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="textPassword"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:paddingStart="20dp"
                            android:paddingEnd="0dp"
                            android:text="@string/register_confirm_password_title"
                            android:textColor="@color/dirtyWhite"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/register_et_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/et_bg"
                            android:fontFamily="@font/roboto_light"
                            android:inputType="textPassword"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/dirtyWhite"
                            android:textCursorDrawable="@drawable/dirty_white_cursor_drawable"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/register_pb"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register_linlay1"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/register_btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/register_linlay1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="70dp"
                    android:paddingEnd="70dp"
                    android:text="@string/register_button_title"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/register_btn_back_to_login"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/register_btn_submit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_bg"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="70dp"
                    android:paddingEnd="70dp"
                    android:text="@string/register_button_back_to_login"
                    android:textColor="@color/dirtyWhite"
                    android:textSize="16sp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
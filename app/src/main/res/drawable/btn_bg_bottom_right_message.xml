<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="0dp"
        android:right="0dp">
        <shape
            android:shape="rectangle">
            <corners
                android:bottomRightRadius="20dp" />

            <stroke
                android:width="1dp"
                android:color="@color/dirtyWhite" />
            <solid
                android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="6dp"
        android:right="6dp"
        android:top="2dp"
        android:drawable="@drawable/ic_message_blue_24dp"
        android:gravity="center"/>
</layer-list>
